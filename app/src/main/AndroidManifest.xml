<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mprog.nl.programmeerprojectdaniel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dictionary_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dictionary"
            android:configChanges="orientation"
            android:label="@string/title_activity_dictionary"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Practise"
            android:configChanges="orientation"
            android:label="@string/title_activity_practise"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Exercises"
            android:configChanges="orientation"
            android:label="@string/title_activity_exercises"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewList"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddWords"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WordLists"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AllWords"
            android:label="@string/title_activity_all_words"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>